<form method="POST" action="/api/responses/{{survey.id}}/{{step.id}}">
  <input type="hidden" name="responseId" value="{{responseId}}">

  <table class="grid-table">
    <thead>
      <tr>
        <th></th>
        {{#step.columns}}
          <th>{{label}}</th>
        {{/step.columns}}
      </tr>
    </thead>

    <tbody>
      {{#step.rows}}
      <tr>
        <td class="row-label">{{label}}</td>

        {{#columns}}
        <td class="grid-cell">
          {{#isRadio}}
            <input
              type="radio"
              name="{{name}}"
              value="{{value}}"
              {{#checked}}checked{{/checked}}
            >
          {{/isRadio}}

          {{#isCheckbox}}
            <input
              type="checkbox"
              name="{{name}}"
              value="{{value}}"
              {{#checked}}checked{{/checked}}
            >
          {{/isCheckbox}}
        </td>
        {{/columns}}

      </tr>
      {{/step.rows}}
    </tbody>
  </table>

  <button type="submit">Suivant</button>
</form>
